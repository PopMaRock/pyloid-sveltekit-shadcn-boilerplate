{
  "name": "pyloid-sveltekit-ssr-boilerplate",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:sveltekit pyloid",
    "dev:watch": "npm-run-all --parallel dev:sveltekit pyloid:watch",
    "dev:sveltekit": "vite dev",
    "build": "vite build && uv run -p .venv ./src-pyloid/build/build.py",
    "pyloid": "uv run -p .venv ./src-pyloid/main.py",
    "pyloid:watch": "uv run pyloid-watcher --path ./src-pyloid --pattern \"*.py\" --command \"uv run ./src-pyloid/main.py\"",
    "package": "node ./scripts/pre-build.js && svelte-kit sync && svelte-package && node ./scripts/post-build.js",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "biome lint",
    "format": "biome format",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "sync": "svelte-kit sync",
    "setup": "npm install && uv venv && uv sync"
  },
  "dependencies": {
    "mode-watcher": "^1.1.0",
    "pyloid-js": "^0.3.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.42.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.13",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.5.2",
    "bits-ui": "^2.11.4",
    "npm-run-all": "^4.1.5",
    "run-script-os": "^1.1.6",
    "clsx": "^2.1.1",
    "svelte": "^5.28.1",
    "svelte-check": "^4.1.6",
    "tailwindcss": "^4.1.7",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tw-animate-css": "^1.3.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}